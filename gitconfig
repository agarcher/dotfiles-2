# Local/private config goes in the include
[include]
  path = ~/.gitconfig.local
[hub]
  protocol = https
[color]
  diff = auto
  status = auto
  branch = auto
  ui = true
[core]
  excludesfile = ~/.gitignore
  editor = vim
	commitGraph = true
[apply]
  whitespace = nowarn
[merge]
  tool = vscode
[mergetool "vscode"]
  cmd = code --wait $MERGED
[diff]
	algorithm = patience
[difftool]
  prompt = false
[help]
  autocorrect = 1
[protocol]
	version = 2
[push]
  default = simple
[gc]
	writeCommitGraph = true
[pull]
	ff = only
